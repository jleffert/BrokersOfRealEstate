<div class="container">
  <h1>Contact Us</h1>
  <h5 class="mb-3">Send us an email with the form below</h5>
  <%= form_for @contact_form, url: contact_form_path do |f |%>
    <div class="form-group">
      <%= f.label :email, "Email*" %>
      <%= f.text_field :email, required: false, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :email, "Content*" %>
      <%= f.text_area :message, as: :text, required: false, class: "form-control" %>
    </div>
    <%= f.submit 'Send Email', class: 'btn btn-primary w-100' %>
  <% end %>
</div>